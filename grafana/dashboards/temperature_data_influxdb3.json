{
  "meta": {
    "exported": "2025-12-12 00:00:00",
    "title": "Temperature Data (InfluxDB 3)",
    "uid": "tempdb3",
    "folder": "General",
    "version": 1
  },
  "dashboard": {
    "title": "Temperature Data (InfluxDB 3)",
    "schemaVersion": 39,
    "version": 1,
    "editable": true,
    "fiscalYearStartMonth": 0,
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "type": "gauge",
        "title": "Big Garage",
        "description": "Latest temperature from Big Garage",
        "transparent": true,
        "datasource": {
          "type": "grafana-influxdb-flightsql-datasource",
          "uid": "influxdbv3"
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
        "options": {
          "minVizHeight": 75,
          "minVizWidth": 75,
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "/^celsius$/",
            "values": false
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true,
          "sizing": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "decimals": 1,
            "min": -10,
            "max": 30,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "dark-blue" },
                { "value": -10, "color": "dark-blue" },
                { "value": 0, "color": "light-blue" },
                { "value": 15, "color": "light-green" },
                { "value": 20, "color": "dark-green" },
                { "value": 25, "color": "orange" },
                { "value": 30, "color": "dark-orange" },
                { "value": 31, "color": "red" }
              ]
            },
            "custom": {
              "hideFrom": { "tooltip": false, "viz": false, "legend": false }
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "fahrenheit" },
              "properties": [
                { "id": "unit", "value": "fahrenheit" },
                { "id": "custom.hideFrom", "value": { "tooltip": false, "viz": true, "legend": false } },
                { "id": "displayName", "value": "Â°F" }
              ]
            }
          ]
        },
        "targets": [
          {
            "refId": "A",
            "hide": false,
            "format": "table",
            "rawSql": "SELECT celsius, fahrenheit FROM esp_temperature WHERE device = 'Big-Garage' AND time >= $__timeFrom AND time <= $__timeTo ORDER BY time DESC LIMIT 1",
            "rawQuery": true,
            "editorMode": "builder",
            "datasource": { "uid": "influxdbv3", "type": "grafana-influxdb-flightsql-datasource" }
          }
        ]
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Temperature by Device (24h)",
        "datasource": {
          "type": "grafana-influxdb-flightsql-datasource",
          "uid": "influxdbv3"
        },
        "gridPos": { "h": 10, "w": 24, "x": 0, "y": 5 },
        "transparent": true,
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "decimals": 1,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "spanNulls": true,
              "hideFrom": { "tooltip": false, "viz": false, "legend": false }
            },
            "color": {
              "mode": "palette-classic",
              "byValueSupport": true,
              "fixedColor": "green",
              "seriesBy": "last"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "dark-blue" },
                { "value": -10, "color": "dark-blue" },
                { "value": 0, "color": "light-blue" },
                { "value": 15, "color": "light-green" },
                { "value": 20, "color": "dark-green" },
                { "value": 25, "color": "orange" },
                { "value": 30, "color": "dark-orange" },
                { "value": 31, "color": "red" }
              ]
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "celsius" },
              "properties": [
                { "id": "displayName", "value": "${__field.labels.device}" },
                { "id": "color", "value": { "mode": "thresholds" } }
              ]
            }
          ]
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none",
            "hideZeros": false
          },
          "legend": {
            "showLegend": true,
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["min", "max", "median", "last"],
            "values": ["min", "max", "median", "last"]
          }
        },
        "targets": [
          {
            "refId": "A",
            "hide": false,
            "format": "time_series",
            "rawSql": "SELECT time, device, celsius FROM esp_temperature WHERE time >= $__timeFrom AND time <= $__timeTo ORDER BY time, device",
            "rawQuery": true,
            "editorMode": "builder",
            "datasource": { "uid": "influxdbv3", "type": "grafana-influxdb-flightsql-datasource" }
          }
        ],
        "transformations": [
          {
            "id": "filterFieldsByName",
            "options": {
              "include": {
                "names": ["time", "device", "celsius"]
              }
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {
                "celsius": 2,
                "device": 1,
                "time": 0
              },
              "renameByName": {}
            }
          }
        ]
      }
    ],
    "time": {
      "from": "now-12h",
      "to": "now"
    },
    "refresh": "30s",
    "templating": { "list": [] }
  }
}
